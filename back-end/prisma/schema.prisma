// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Difficulty {
  EASY
  MEDIUM
  HARD
  EXTREME
}

model Avatar {
  torsoColour String @default("blue")
  armColour   String @default("blue")
  legColour   String @default("blue")
  headColour  String @default("blue")
  client      Client @relation(fields: [avatarEmail], references: [email])
  avatarEmail String @id
}

model Client {
  email       String    @id
  firstName   String
  lastName    String
  password    String
  dateOfBirth DateTime?
  avatar      Avatar?
}

model Planner {
  email       String    @unique
  firstName   String
  lastName    String
  password    String
  dateOfBirth DateTime?

  workouts Workout[]
}

model Workout {
  workoutID          String @id @default(uuid())
  workoutTitle       String
  workoutDescription String

  exercises  Exercise[]
  difficulty Difficulty

  planner       Planner? @relation(fields: [planner_Email], references: [email])
  planner_Email String?
}

model Exercise {
  exercise        String     @id @default(uuid())
  title           String
  description     String
  repRange        String
  sets            Int
  Posedescription String
  restPeriod      Int
  wasSkipped      Boolean
  difficulty      Difficulty

  duratime Int


  Workout          Workout? @relation(fields: [workoutWorkoutID], references: [workoutID])
  workoutWorkoutID String?
}
