// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Difficulty{
    EASY
    MEDIUM
    HARD
    EXTREME
}

model Avatar{
    torsoColour String @default("blue")
    armColour String @default("blue")
    legColour String @default("blue")
    headColour String @default("blue")
    client Client @relation(fields: [avatarEmail], references:[email])
    avatarEmail String @id
}

model Client{
    email String @id
    firstName String
    lastName String
    password String
    dateOfBirth DateTime?
    userType Int
    avatar Avatar?
}

model Planner{
    email String @unique
    firstName String
    lastName String
    password String
    dateOfBirth DateTime?
    userType Int
}

model Workout{
    workoutID String @default(uuid()) @id
    workoutTitle String @db.VarChar(20)
    workoutDescription String @db.VarChar(200)
    exercises Exercise[]
    difficulty Difficulty
}

model Exercise {
  exercise String @default(uuid()) @id
  title String @db.VarChar(255)
  description String @db.VarChar(255)
  repRange String @db.VarChar(255)
  sets Int
  Posedescription String @db.VarChar(255)
  restPeriod DateTime
  wasSkipped Boolean
  difficulty Difficulty

  duratime DateTime

  workout Workout @relation(fields: [workout_id], references:[workoutID])
  workout_id String
}

