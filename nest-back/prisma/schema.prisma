// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum userType {
  ADMIN
  CLIENT
  PLANNER
}

model Avatar {
  torsoColour String @default("blue")
  armColour   String @default("blue")
  legColour   String @default("blue")
  headColour  String @default("blue")
  client      User @relation(fields: [avatarEmail], references: [email])
  avatarEmail String @id
}

model User {
  userId  String   @id @default(uuid())
  email       String    @unique
  firstName   String
  lastName    String
  password    String
  dateOfBirth DateTime?
  avatar      Avatar?
  userType    userType
  workouts Workout[]
}


model Workout {
  workoutID          String @id @default(uuid())
  workoutTitle       String
  workoutDescription String

  exercises          Exercise[]
  tags               Tag[]

  planner            User? @relation(fields: [planner_ID], references: [userId])
  planner_ID         String?
}

model Exercise {
  exercise        String     @id @default(uuid())
  title           String
  description     String
  repRange        String
  sets            Int
  Posedescription String
  restPeriod      Int
  tags            Tag[]
  duratime        Int

  workouts        Workout[]
}

model Tag{
  label             String    @id
  textColour        String
  backgroundColour  String
  workouts          Workout[]
  exercises         Exercise[]
}