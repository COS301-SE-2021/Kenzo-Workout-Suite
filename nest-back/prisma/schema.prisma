// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum userType {
  ADMIN
  CLIENT
  PLANNER
}

model Avatar {
  torsoColour String @default("blue")
  armColour   String @default("blue")
  legColour   String @default("blue")
  headColour  String @default("blue")
  client      User   @relation(fields: [avatarEmail], references: [email])
  avatarEmail String @id
}

model User {
  userID      String     @id @default(uuid())
  email       String     @unique
  firstName   String
  lastName    String
  password    String
  dateOfBirth DateTime?
  avatar      Avatar?
  userType    userType
  workouts    Workout[]
  exercises   Exercise[]
}

model Workout {
  workoutID          String @id @default(uuid())
  workoutTitle       String
  workoutDescription String

  exercises Exercise[]

  planner   User?   @relation(fields: [plannerID], references: [userID])
  plannerID String?
}

model Exercise {
  exerciseID          String    @id @default(uuid())
  exerciseTitle       String
  exerciseDescription String
  repRange            String
  sets                Int
  poseDescription     String
  restPeriod          Int
  tags                Tag[]
  duration            Int
  workouts            Workout[]

  planner   User?   @relation(fields: [plannerID], references: [userID])
  plannerID String?
}

model Tag {
  label            String     @id
  textColour       String
  backgroundColour String
  exercises        Exercise[]
}
